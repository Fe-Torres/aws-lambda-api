{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "no-undef": "error",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-trailing-spaces": "error",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-var": "error",
    "prefer-const": "error",
    "no-else-return": "error",
    "eqeqeq": "error",
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ]
  },
  "overrides": [
    {
      "files": "src/**/*.ts"
    }
  ]
}